<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with PLN Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_pln"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT.PLN INDONESIA POWER UNIT BISNIS PEMBANGKITAN (UBP) SAGULING"
                android:textColor="#0054A6"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- SECTION: Pilih Data Pengukuran -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Data Pengukuran"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerPengukuran"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_dropdown_background"
                    android:dropDownVerticalOffset="4dp"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical|start"/>

                <Button
                    android:id="@+id/btnPilihPengukuran"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Gunakan Pengukuran Ini"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#0054A6"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECTION: TMA Waduk -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TMA Waduk (mdpl)"
                    android:textColor="#0054A6"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTmaWaduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TMA Waduk"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECTION: t_thomson_weir - GALLERY -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/thomson_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thomson Weir - GALLERY (A1 R, A1 L, B1)"
                    android:textColor="#0054A6"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- TAMPILKAN FIELD INI UNTUK HP 2 (GALLERY) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputA1R"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="A1 R (Gallery)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputA1L"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="A1 L (Gallery)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputB1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="B1 (Gallery)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- B3 dan B5 DISEMBUNYIKAN UNTUK HP 2 (GALLERY) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/b3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputB3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="B3 (Stilling Basin)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/b5_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputB5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="B5 (Stilling Basin)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECTION: t_bocoran_baru -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bocoran Baru"
                    android:textColor="#0054A6"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- ELV 624 T1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode ELV 624 T1"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp"/>

                        <Spinner
                            android:id="@+id/inputElv624T1Kode"
                            android:layout_width="match_parent"
                            android:entries="@array/kode_options"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@drawable/spinner_dropdown_background"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputElv624T1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ELV 624 T1"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- ELV 615 T2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode ELV 615 T2"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp"/>

                        <Spinner
                            android:id="@+id/inputElv615T2Kode"
                            android:layout_width="match_parent"
                            android:entries="@array/kode_options"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@drawable/spinner_dropdown_background"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputElv615T2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ELV 615 T2"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- PIPA P1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kode PIPA P1"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp"/>

                        <Spinner
                            android:id="@+id/inputPipaP1Kode"
                            android:layout_width="match_parent"
                            android:entries="@array/kode_options"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@drawable/spinner_dropdown_background"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputPipaP1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PIPA P1"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECTION: Simpan & Hitung Semua Data -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSimpanDanHitung"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="SIMPAN DAN HITUNG SEMUA DATA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data akan disimpan (offline/online) dan dihitung otomatis saat online"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="8dp"/>

                <TextView
                    android:id="@+id/sync_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:text="âœ… Semua data tersinkronisasi"
                    android:textColor="@color/green_primary"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>